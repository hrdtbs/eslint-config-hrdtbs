{
  "name": "eslint-config-hrdtbs",
  "description": "my eslint config",
  "version": "0.0.2",
  "author": "hrdtbs",
  "engines": {
    "node": ">= 8"
  },
  "main": "es2019.js",
  "files": [
    "*.js",
    ".prettierrc.json",
    ".prettierignore",
    "lib"
  ],
  "scripts": {
    "lint:js": "eslint '**/*.js' '**/.*.js'",
    "lint:js:fix": "eslint '**/*.js' '**/.*.js' --fix",
    "lint:json": "prettier --list-different '**/*.json'",
    "lint:json:fix": "prettier --write '**/*.json'",
    "test": "run-p -l -n -c --aggregate-output lint:js lint:json unit",
    "unit": "mocha test"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-eslint-comments": "^3.1.1",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.6.0",
    "globals": "^11.11.0"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "glob": "^7.1.4",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.6",
    "mocha": "^6.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "typescript": "^3.4.5"
  },
  "peerDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-eslint-comments": "^3.1.1",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.6.0",
    "globals": "^11.11.0",
    "prettier": "^1.16.4"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "npm run lint:js:fix",
      "git add"
    ],
    "*.{json}": [
      "npm run lint:json:fix",
      "git add"
    ]
  }
}
